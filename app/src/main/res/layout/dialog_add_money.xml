<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="16sp"
            android:text="记一笔"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#3740a4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#50cecece"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:inputType="numberDecimal"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:hint="请输入金额"
            android:padding="0dp"
            android:textColor="#212121"
            android:textSize="14sp"
            app:met_errorColor="#dc3545"
            app:met_helperText="金额为数字，精确到小数点后两位"
            app:met_floatingLabel="highlight"
            app:met_underlineColor="@color/colorPrimaryDark"
            app:met_floatingLabelText="请输入金额"
            app:met_helperTextColor="@color/colorPrimaryDark"
            app:met_floatingLabelTextColor="@color/colorAccent"
            app:met_textColorHint="@color/colorPrimary" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:hint="钱花哪儿去了"
            android:padding="0dp"
            android:textColor="#212121"
            android:textSize="14sp"
            app:met_errorColor="#dc3545"
            app:met_helperText="说明一下花钱的原因，不超过10个汉字"
            app:met_floatingLabel="highlight"
            app:met_underlineColor="@color/colorPrimaryDark"
            app:met_maxCharacters="10"
            app:met_floatingLabelText="钱花哪儿去了"
            app:met_helperTextColor="@color/colorPrimaryDark"
            app:met_floatingLabelTextColor="@color/colorAccent"
            app:met_textColorHint="@color/colorPrimary" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center|end"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimary"
                android:background="?android:selectableItemBackground"
                android:layout_marginEnd="5dp"
                android:id="@+id/negative"
                android:text="我没花钱"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/positive"
                android:background="?android:selectableItemBackground"
                android:text="确认"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>